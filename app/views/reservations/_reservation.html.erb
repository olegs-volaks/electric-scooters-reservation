<tr>
  <td><%= reservation.id %></td>
  <td><%= reservation.employee.name %></td>
  <td><%= reservation.scooter.number %></td>
  <td><%= l(reservation.from, format: :long) %></td>
  <td><%= l(reservation.to, format: :long) %></td>
  <td><%= l(reservation.created_at, format: :long) %></td>
  <td>
    <div class="btn-group btn-group-sm float-end">
      <%= link_to fas_icon('pen-to-square'), edit_reservation_path(reservation), class: 'btn btn-primary' %>
      <%= link_to fas_icon('trash'), reservation_path(reservation), class: 'btn btn-danger', data: { turbo_method: :delete } %>
    </div>
  </td>
</tr>