<%= page_header t('.title'), button_title: t('shared.new'), link: new_employee_path %>

<div class="card mb-3">
  <div class="card-body">
    <%= search_form_for @q do |f| %>
      <div class="row">
        <div class="col-sm-9">
          <%= f.search_field :full_name_or_email_cont, class: 'form-control', placeholder: t('shared.search') %>
        </div>
        <div class="col-md-3">
          <%= f.submit t('shared.search'), class: 'btn btn-outline-primary float-end' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<table class="table table-hover">
  <thead class="table-dark">
  <tr>
    <th><%= sort_link(@q, :id) %></th>
    <th><%= sort_link(@q, :full_name) %></th>
    <th><%= sort_link(@q, :email) %></th>
    <th><%= sort_link(@q, :created_at) %></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'employee', collection: @employees %>
  </tbody>
</table>

<%= will_paginate @employees, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>